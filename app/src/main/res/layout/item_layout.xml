<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_16">

        <TextView
            android:id="@+id/ename"
            android:layout_width="@dimen/no_dp"
            android:layout_height="wrap_content"
            android:text="@string/ename"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_Size_22"
            app:layout_constraintStart_toEndOf="@id/imageUrl" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="@dimen/no_dp"
            android:layout_height="wrap_content"
            android:text="@string/salary"
            android:textSize="@dimen/txt_Size_20"
            app:layout_constraintStart_toStartOf="@id/ename"
            app:layout_constraintTop_toBottomOf="@id/ename" />

        <TextView
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textSize="@dimen/txt_Size_20"
            app:layout_constraintStart_toStartOf="@id/salary"
            app:layout_constraintTop_toBottomOf="@id/salary" />

        <ImageView
            android:id="@+id/imageUrl"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_100"
            app:layout_constraintEnd_toStartOf="@+id/ename" />

        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="@dimen/size_28"
            android:layout_height="@dimen/size_28"
            android:src="@drawable/arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteYX="50dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
